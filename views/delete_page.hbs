<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Entry by Name</title>
</head>
<body>
    <h1>Delete Entry by Name</h1>
    <form id="deleteForm" method="delete">
        <label for="entryName">Entry Name:</label>
        <input type="text" id="entryName" name="entryName" required>
        <button type="button" onclick="deleteEntry()">Delete</button>
    </form>
    <script>
        function deleteEntry() {
            const entryName = document.getElementById('entryName').value;
            
            fetch('http://localhost:3000/delete_page/' + entryName, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                },
            })
            .then(response => response.json())
            .then(data => {
                console.log('Entry deleted:', data);
                // Handle success or display a message to the user
            })
            .catch(error => {
                console.error('Error deleting entry:', error);
                // Handle errors or display an error message to the user
            });
            window.location.href = 'home';
        }
    </script>
</body>
</html>

